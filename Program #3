Weight = float(input('Weight: '))
if Weight <= 2:
    Total = Weight * 1.50
    print('$',Total)
elif Weight > 2 and Weight <= 6:
    Total = 3.00 * Weight
    print('$',Total)
elif Weight > 6 and Weight <= 10:
    Total = 4.00 * Weight
    print('$',Total)
elif Weight > 10:
    Total = 4.75 * Weight
    print('$',Total)


